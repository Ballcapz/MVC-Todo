@model TodoItem

<h1>Todo List</h1>
<h4>Edit a todo: @Model.Description</h4>

<form asp-action="SaveEdit" method="post" class="form-inline">
    <input type="hidden" name="Id" value="@Model.Id">
    <input type="text" name="Description" placeholder="Description" id="Description" class="form-control">
    <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o" aria-hidden="true"></i></button>
</form>